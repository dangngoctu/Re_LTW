
@{
    ViewBag.Title = "NhapThongTin";
    Layout = "~/Views/Shared/ThuVienMasterPage.cshtml";
}

<h2>Đăng Nhập</h2>
@if (ViewBag.note != null)
{
    <p style="color:red;">@ViewBag.note</p>
}
<form id="registerForm" method="post" action="/DangNhap/ThucHienDangNhap" enctype="multipart/form-data">
    <table class="table" style="text-align:center;color:forestgreen; border:solid 2px">
        <tr>
            <td style="font-weight:bold;font-size:20px" colspan="2">ĐĂNG NHẬP</td>
        </tr>
        <tr>
            <td style="font-size:17px">Nhập tài khoản<span style="color:red">(*)</span></td>
            <td><input class="form-control" style="width:200px" type="text" id="username" name="username" placeholder="Điền tài khoản" required /></td>
        </tr>
        <tr>
            <td style="font-size:17px">Nhập mật khẩu<span style="color:red">(*)</span></td>
            <td><input class="form-control" style="width:200px" type="password" id="password" name="password" placeholder="Điền mật khẩu" required /></td>
        </tr>
        <tr>
            <td colspan="2"><input type="checkbox" id="remember" name="remember" value="true" />Ghi nhớ đăng nhập?</td>
        </tr>
        <tr>
            <td colspan="2"><input class="btn btn-success" type="submit" name="registerSubmit" value="Đăng Nhập" style="float:right" /></td>
        </tr>
    </table>
</form>